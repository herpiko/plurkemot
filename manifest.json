{
  "manifest_version": 2,
  "name": "Plurkemot",
  "description": "One emotpocket to rule them all",
  "version": "0.2",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "background": {
    "scripts" : [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
